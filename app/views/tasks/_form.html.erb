<%= form_with model: @task, local: true do |f|%>

  <div class="field">
    <%= f.label :title, "タスクタイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :matter, "タスク詳細" %><br />
    <%= f.text_area :matter, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :scheduled_date, "完了予定日" %><br />
    <%= f.date_field :scheduled_date, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :status, "ステータス" %><br />
    <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :progress, "進捗" %><br />
    <%= f.collection_select(:progress_id, Progress.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :flag, "フラグ" %><br />
    <%= f.collection_select(:flag_id, Flag.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>

  <div class="field">
    <%= f.label :supplement, "補足" %><br />
    <%= f.text_area :supplement, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :completion_date, "完了日(※タスクが完了したら入力して下さい)" %><br />
    <%= f.date_field :completion_date, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>